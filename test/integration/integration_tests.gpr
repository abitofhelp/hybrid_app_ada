-- ===========================================================================
-- integration_tests.gpr - Integration Test Suite for Hybrid_App_Ada
-- ===========================================================================
-- Purpose:
--   Integration test project for testing cross-layer interactions.
--   Inherits validation profile settings from hybrid_app_ada.gpr for consistency.
--
-- Build: alr build --validation
--        make build-tests
-- ===========================================================================

with "../../hybrid_app_ada.gpr";

project Integration_Tests is

   for Source_Dirs use (".", "../common");
   for Object_Dir use "../../obj/test/integration";
   for Exec_Dir use "../bin";

   --  Only the runner is Main; individual tests are procedures it calls
   for Main use ("integration_runner.adb");

   package Compiler is
      --  Inherit compiler settings from main project (uses validation profile)
      for Default_Switches ("Ada") use
         Hybrid_App_Ada.Compiler'Default_Switches("Ada");
   end Compiler;

   package Binder is
      --  Inherit binder settings from main project
      for Switches ("Ada") use
         Hybrid_App_Ada.Binder'Default_Switches("Ada");
   end Binder;

   package Builder is
      for Switches ("Ada") use ("-g");  -- Debug symbols
   end Builder;

end Integration_Tests;
