-- ===========================================================================
-- integration_tests.gpr - Integration Test Suite for Simple_Hybrid
-- ===========================================================================
-- Purpose:
--   Integration test project for testing cross-layer interactions.
--   Inherits 'test' mode settings from simple_hybrid.gpr for consistency.
--
-- Build: alr build -Xmode=test
--        make build-tests
-- ===========================================================================

with "../../simple_hybrid.gpr";

project Integration_Tests is

   for Source_Dirs use (".", "../common");
   for Object_Dir use "../../obj/test/integration";
   for Exec_Dir use "../bin";

   --  Main test programs (add your tests here)
   for Main use
     ("integration_runner.adb",
      "test_greet_full_flow.adb",
      "test_infrastructure_console_writer.adb");

   package Compiler is
      --  Inherit compiler settings from main project (uses 'test' mode)
      for Default_Switches ("Ada") use
         Simple_Hybrid.Compiler'Default_Switches("Ada");
   end Compiler;

   package Binder is
      --  Inherit binder settings from main project
      for Switches ("Ada") use
         Simple_Hybrid.Binder'Default_Switches("Ada");
   end Binder;

   package Builder is
      for Switches ("Ada") use ("-g");  -- Debug symbols
   end Builder;

end Integration_Tests;
